<template>
  <div id="app">
    <MyHeader />
    <AddTodos v-on:add-todo="addTodo" />

    <MyTodos v-bind:todos="todos" v-on:del-todo="deleteTodo" />
  </div>
</template>

<script>
import MyHeader from "./components/layout/Header.vue";
import MyTodos from "./components/Todos.vue";
import AddTodos from "./components/AddTodo.vue";
import axios from "axios";
export default {
  name: "App",
  components: {
    MyTodos,
    MyHeader,
    AddTodos,
  },
  data() {
    return {
      todos: [],
    };
  },
  methods: {
    deleteTodo(id) {
      // eslint-disable-next-line
      axios
        .delete(`https://jsonplaceholder.typicode.com/todos/${id}`)
        // eslint-disable-next-line
        .then((res) => (this.todos = this.todos.filter((x) => x.id !== id)))
        .catch((err) => console.log(err));
      //Without the jsonplaceholder
      // this.todos = this.todos.filter((x) => x.id !== id);
    },
    addTodo(newTodo) {
      const { title, completed } = newTodo;
      axios
        .post("https://jsonplaceholder.typicode.com/todos", {
          title,
          completed,
        })
        .then((res) => (this.todos = [...this.todos, res.data]))
        .catch((err) => console.log(err));
      //Without the jsonplaceholder
      // this.todos = [...this.todos, newTodo];
    },
  },
  created() {
    //Works like ngoninit in angular
    axios
      .get("https://jsonplaceholder.typicode.com/todos?_limit=10")
      .then((res) => (this.todos = res.data))
      .catch((error) => console.log(error));
  },
};
</script>

<style>
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}
body {
  font-family: Arial, Helvetica, sans-serif;
  line-height: 1.4;
}
.btn {
  display: inline-block;
  border: none;
  background: #555;
  color: #fff;
  padding: 7px 20px;
  cursor: pointer;
}
.btn:hover {
  background: #666;
}
</style>
